<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:layout_behavior="@string/appbar_scrolling_view_behavior">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="24dp">

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/card_margin"
      android:layout_marginLeft="@dimen/card_margin"
      android:layout_marginRight="@dimen/card_margin">

      <FrameLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/team_info"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

          <TextView
            android:id="@+id/txt_club"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Gremio Foot-ball Porto Alegrense"/>

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fourth_division"/>

          <TextView
            android:id="@+id/txt_nation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Brazil"/>

          <TextView
            android:id="@+id/txt_manager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Manager: FelipÃ£o"/>

        </LinearLayout>

        <ImageView
          android:id="@+id/img_club_logo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end|center_vertical"
          android:transitionName="img_team"/>

      </FrameLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginBottom="@dimen/card_margin"
      android:layout_marginLeft="@dimen/card_margin"
      android:layout_marginRight="@dimen/card_margin">

      <FrameLayout
        style="@style/Widget.CardContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="vertical">

          <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="@string/league"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>

          <TextView
            android:id="@+id/txt_league"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Campeonato Brasileiro"/>

        </LinearLayout>

        <ImageView
          android:id="@+id/img_league_logo"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="end|center_vertical"/>

      </FrameLayout>

    </android.support.v7.widget.CardView>

  </LinearLayout>

</android.support.v4.widget.NestedScrollView>