<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/color_primary</item>
    <item name="colorPrimaryDark">#90651a</item>
    <item name="colorAccent">#462e09</item>
    <item name="android:windowBackground">@color/window_background</item>
  </style>

  <style name="Widget.CardContent" parent="android:Widget">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">24dp</item>
    <item name="android:paddingBottom">24dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="AppTheme.TextAppearance.PlayerCard" parent="TextAppearance.AppCompat.Subhead">
    <item name="android:textColor">#36221B</item>
    <item name="android:textSize">12sp</item>
  </style>

  <style name="AppTheme.League">
  </style>

  <style name="AppTheme.League.Standings">
  </style>

  <style name="AppTheme.League.Standings.ClubRow">
    <item name="android:textColor">#615d5d</item>
    <item name="android:textSize">13sp</item>
  </style>
  <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
  <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
</resources>