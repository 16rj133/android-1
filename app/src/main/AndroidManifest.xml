<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.felipecsl.elifut"
          xmlns:android="http://schemas.android.com/apk/res/android">

  <uses-permission android:name="android.permission.INTERNET"/>

  <application
    android:name=".ElifutApplication"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:theme="@style/AppTheme">
    <activity
      android:name=".activitiy.MainActivity"
      android:label="@string/title_activity_main">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity android:name=".activitiy.TeamDetailsActivity"/>
    <activity android:name=".activitiy.LeagueDetailsActivity"/>
    <activity
      android:name=".activitiy.MatchProgressActivity"
      android:label="@string/match_progress"/>
    <activity android:name=".fragment.LeagueProgressFragment"/>
  </application>

</manifest>
